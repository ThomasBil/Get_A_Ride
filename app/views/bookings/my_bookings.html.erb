<div class="container_my_cars">
  <div class="container_my_car">
    <h2>Mes voitures en location üí≤ </h2>
    <div class="cards_my_cars">
        <div class="layout_my_cars">
          <% @my_cars.each do |car| %>
            <% if car.bookings != [] %>
              <% car.bookings.each do |booking| %>
              <div class="my_cars" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
                <%= link_to car.brand, car_path(car), class: "link_to" %>
              </div>
                <p class="demand"><%= booking.user.name %> <%= booking.status %> <%= link_to "Accept", accept_path(booking), method: :patch, class:"btn_booking" %><%= link_to "Decline", decline_path(booking), method: :patch, class:"btn_booking" %></p>
              <% end %>
            <% end %>
          <% end %>
        </div>
    </div>
  </div>
</div>
