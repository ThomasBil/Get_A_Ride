<h1 class="title-index">LES VOITURES EN LOCATION PRES DE CHEZ VOUS</h1>


<div class="container mt-5">
  <div class="cards">
  <% @cars.each do |car| %>
   <%= link_to car_path(car), class:"link_to" do %>
      <div class="card-trip">
        <% if car.photos[0] != nil %>
          <%= cl_image_tag car.photos[0].key, height: 300, width: 400, crop: :fill %>
        <% end %>
          <div class="card-trip-infos">
            <div>
              <h2><%= "#{car.brand} #{car.model}" %></h2>
              <p><%= car.details %></p>
            </div>
            <h2 class="card-trip-pricing"><%= car.price_per_day %>â‚¬/day</h2>
            <img src="https://www.ongconseil.be/wp-content/uploads/2018/03/fg-avatar-anonymous-user-retina.png" class="card-trip-user avatar" />
          </div>
      </div>
    <% end %>
  <% end %>
  </div>
</div>
