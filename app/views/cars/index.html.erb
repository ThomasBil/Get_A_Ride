<div class="container mt-5">


  <div class="cards">
  <% @cars.each do |car| %>
      <%= link_to car_path(car), class:"link_to" do %>
      <div class="card-trip">
        <% if car.photos[0] != nil %>
          <%= cl_image_tag car.photos[0].key, height: 300, width: 400, crop: :fill %>
        <% else %>
          <img src="https://images.unsplash.com/photo-1541899481282-d53bffe3c35d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" alt="megane rs" />
        <% end %>
          <div class="card-trip-infos">
            <div>
              <h2><%= car.brand %></h2>
              <p><%= car.details %>Short description here!</p>
            </div>
            <h2 class="card-trip-pricing"><%= car.price_per_day %>â‚¬/day</h2>
            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
          </div>
      </div>
      <% end  %>
    <% end %>
  </div>


</div>
